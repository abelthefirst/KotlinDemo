<resources>

    <style name="Card" parent="Base.CardView">
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Caption.Light">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

</resources>